<fuzzySystem name="xml_test" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:noNamespaceSchemaLocation="../../../src/autopas/tuning/tuningStrategy/fuzzyTuning/xmlParser/fml.xsd">
    <knowledgeBase>
        <fuzzyVariable name="service" domainleft="0" domainright="10">
            <fuzzyTerm name="poor">
                <gaussianShape param1="0" param2="1.5"/>
            </fuzzyTerm>
            <fuzzyTerm name="good">
                <gaussianShape param1="5" param2="1.5"/>
            </fuzzyTerm>
            <fuzzyTerm name="excellent">
                <gaussianShape param1="10" param2="1.5"/>
            </fuzzyTerm>
        </fuzzyVariable>

        <fuzzyVariable name="food" domainleft="0" domainright="10">
            <fuzzyTerm name="rancid">
                <trapezoidShape param1="0" param2="0" param3="1" param4="3"/>
            </fuzzyTerm>
            <fuzzyTerm name="delicious">
                <trapezoidShape param1="7" param2="9" param3="10" param4="10"/>
            </fuzzyTerm>
        </fuzzyVariable>

        <fuzzyVariable name="tip" domainleft="0" domainright="30">
            <fuzzyTerm name="cheap">
                <triangularShape param1="0" param2="5" param3="10"/>
            </fuzzyTerm>
            <fuzzyTerm name="average">
                <triangularShape param1="10" param2="15" param3="20"/>
            </fuzzyTerm>
            <fuzzyTerm name="generous">
                <triangularShape param1="20" param2="25" param3="30"/>
            </fuzzyTerm>
        </fuzzyVariable>
    </knowledgeBase>

    <mamdaniRuleBase name="ruleBase">
        <rule name="rule1" connector="or">
            <antecedent>
                <clause>
                    <variable>service</variable>
                    <term>poor</term>
                </clause>
                <clause>
                    <variable>food</variable>
                    <term>rancid</term>
                </clause>
            </antecedent>
            <consequent>
                <then>
                    <clause>
                        <variable>tip</variable>
                        <term>cheap</term>
                    </clause>
                </then>
            </consequent>
        </rule>

        <rule name="rule2">
            <antecedent>
                <clause>
                    <variable>service</variable>
                    <term>good</term>
                </clause>
            </antecedent>
            <consequent>
                <then>
                    <clause>
                        <variable>tip</variable>
                        <term>average</term>
                    </clause>
                </then>
            </consequent>
        </rule>

        <rule name="rule3" connector="or">
            <antecedent>
                <clause>
                    <variable>service</variable>
                    <term>excellent</term>
                </clause>
                <clause>
                    <variable>food</variable>
                    <term>delicious</term>
                </clause>
            </antecedent>
            <consequent>
                <then>
                    <clause>
                        <variable>tip</variable>
                        <term>generous</term>
                    </clause>
                </then>
            </consequent>
        </rule>
    </mamdaniRuleBase>
</fuzzySystem>

